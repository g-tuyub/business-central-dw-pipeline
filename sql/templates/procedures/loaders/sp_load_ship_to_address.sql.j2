-- Description:	Loads records from {{staging_schema }} to {{ core_schema }} layer.
--              Uses "Unknown member" pattern (@unknown_id) for referential integrity.
--              This record is created once and reused for all missing references.
--              Inserts unknown member if missing, then merges data resolving surrogate keys,
--              using system_id + company_id for matching (essential for multi-company DW).
--              Updates existing records only if source has newer system_modified_at.
-- Returns:     - Number of rows inserted.
--              - Number of rows updated.
-- =============================================
CREATE OR ALTER PROCEDURE [{{ core_schema }}].[sp_load_ship_to_address]
AS
BEGIN

    SET NOCOUNT ON;
    SET XACT_ABORT ON;

{% include 'partials/common_constants.sql.j2' %}


    DECLARE @merge_stats TABLE
                         (
                             action_type VARCHAR(10)
                         )

    BEGIN TRY

        BEGIN TRANSACTION;
        -- =========================================================================
        -- Ensure unknown member (@unknown_id) exists for referential integrity
        -- =========================================================================
        IF NOT EXISTS (SELECT 1 FROM [{{ core_schema }}].[ship_to_address] WHERE [id] = @unknown_id)
            BEGIN

                SET IDENTITY_INSERT [{{ core_schema }}].[ship_to_address] ON;
                INSERT INTO [{{ core_schema }}].[ship_to_address] (id,
                                               code,
                                               customer_id,
                                               customer_code,
                                               country_id,
                                               country_code,
                                               city,
                                               postal_code,
                                               address_line_1,
                                               address_line_2,
                                               system_id,
                                               company_id,
                                               system_created_at,
                                               system_modified_at,
                                               system_created_by_id,
                                               system_modified_by_id)
                VALUES (@unknown_id,
                        @unknown_text,
                        @unknown_id,
                        @unknown_text,
                        @unknown_id,
                        @unknown_text,
                        @unknown_text,
                        @unknown_text,
                        @unknown_text,
                        @unknown_text,
                        @null_uuid,
                        @null_company_id,
                        @min_system_datetime,
                        @min_system_datetime,
                        @null_uuid,
                        @null_uuid)

                SET IDENTITY_INSERT [{{ core_schema }}].[ship_to_address] OFF;

            END;
        -- =========================================================================
        -- Lookup of surrogate keys and MERGE
        -- =========================================================================
        WITH source_data AS (
            SELECT stg.system_id,
                   stg.company_id,
                   stg.system_created_at,
                   stg.system_modified_at,
                   stg.system_created_by_id,
                   stg.system_modified_by_id,
                   stg.code,
                   -- Logic: NULL if source is NULL, @unknown_id if no match (unresolved), reference.id if match found (resolved)
                   CASE
                       WHEN stg.customer_code IS NULL THEN NULL
                       WHEN c.id IS NULL THEN @unknown_id
                       ELSE c.id
                       END AS customer_id,
                   stg.customer_code,

                   CASE
                       WHEN stg.country_code IS NULL THEN NULL
                       WHEN co.id IS NULL THEN @unknown_id
                       ELSE co.id
                       END AS country_id,
                   stg.country_code,
                   stg.city,
                   stg.postal_code,
                   stg.address_line_1,
                   stg.address_line_2

            FROM {{staging_schema }}.ship_to_address AS stg
                     LEFT JOIN {{ core_schema }}.customer c
                               ON stg.customer_code = c.code AND stg.company_id = c.company_id
                     LEFT JOIN {{ core_schema }}.country co
                               ON stg.country_code = co.code AND stg.company_id = co.company_id
            )
            MERGE INTO {{ core_schema }}.ship_to_address AS T
        USING source_data AS S
        ON (T.system_id = S.system_id AND T.company_id = S.company_id)

        -- if the record exists and is newer, updates it:
        WHEN MATCHED AND S.system_modified_at > T.system_modified_at
            THEN
            UPDATE
            SET T.system_modified_at          = S.system_modified_at,
                T.code                        = S.code,
                T.customer_id                 = S.customer_id,
                T.customer_code               = S.customer_code,
                T.country_id                  = S.country_id,
                T.country_code                = S.country_code,
                T.city                        = S.city,
                T.postal_code                 = S.postal_code,
                T.address_line_1              = S.address_line_1,
                T.address_line_2              = S.address_line_2,
                -- IMPORTANT: update modified_at timestamp:
                T.modified_at                 = SYSUTCDATETIME(),
                T.system_modified_by_id       = S.system_modified_by_id

        -- if the record doesn't exist on target table, creates it :
        WHEN NOT MATCHED BY TARGET THEN
            INSERT (system_id, company_id, system_created_at, system_modified_at,
                    system_created_by_id, system_modified_by_id, code, customer_id,
                    customer_code, country_id,
                    country_code, city,
                    postal_code, address_line_1,
                    address_line_2)
            VALUES (S.system_id, S.company_id, S.system_created_at, S.system_modified_at,
                    S.system_created_by_id, S.system_modified_by_id, S.code, S.customer_id,
                    S.customer_code, S.country_id, S.country_code, S.city, S.postal_code,
                    S.address_line_1, S.address_line_2)
            OUTPUT $action into @merge_stats;

        COMMIT TRANSACTION;

        -- returns number of inserted rows, and number of updated rows
        SELECT ISNULL(SUM(IIF(action_type = 'INSERT', 1, 0)), 0) AS rows_inserted,
               ISNULL(SUM(IIF(action_type = 'UPDATE', 1, 0)), 0) AS rows_updated
        FROM @merge_stats

    END TRY
    BEGIN CATCH
        IF @@TRANCOUNT > 0
            ROLLBACK TRANSACTION

        THROW

    END CATCH


END;
GO



